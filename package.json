{
  "name": "poker-game",
  "version": "1.0.0",
  "description": "Multiplayer poker game",
  "scripts": {
    "install-all": "npm install && cd poker-frontend && npm install",
    "build": "cd poker-frontend && npm install && CI=false npm run build",
    "start": "node src/server-new.js",
    "dev": "concurrently \"cd poker-frontend && npm start\" \"nodemon src/server-new.js\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.1",
    "pokersolver": "^2.1.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "18.x"
  }
}
